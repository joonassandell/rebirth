{
  "name": "rebirth-ui",
  "version": "0.6.21",
  "author": "Joonas Ylitalo",
  "homepage": "http://joonasy.com",
  "description": "Front-end starter kit and styleguide for developing responsive, mobile first projects on the web.",
  "license": "MIT",
  "dependencies": {
    "core-js": "^3.2.1",
    "highlight.js": "^9.15.10",
    "jquery": "^3.4.1",
    "lazysizes": "^5.1.2",
    "normalize.css": "^8.0.1"
  },
  "main": "assemblefile.js",
  "repository": "https://github.com/joonasy/rebirth.git",
  "scripts": {
    "build": "NODE_ENV=production assemble build",
    "watch": "npm run docs-watch",
    "dist": "npm run docs-dist",
    "docs-build": "NODE_ENV=production assemble docs-build",
    "docs-watch": "assemble docs-watch",
    "docs-dist": "npm run docs-build && assemble docs-server",
    "docs-deploy": "npm run docs-build && assemble docs-deploy",
    "prepublishOnly": "npm run build && git add package.json dist && git commit -m \"Build: $npm_package_version\" && git tag $npm_package_version && git push --follow-tags"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "docs/**/*.{js,json,md}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "assemble": "^0.24.3",
    "babelify": "^10.0.0",
    "base-watch": "^0.1.3",
    "browser-sync": "^2.26.7",
    "browserify": "^16.5.0",
    "cssnano": "^4.1.10",
    "eslint": "^6.5.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "gh-pages": "^2.1.1",
    "gulp": "~4.0.2",
    "gulp-autoprefixer": "7.0.1",
    "gulp-changed": "^4.0.2",
    "gulp-combine-mq": "^0.4.0",
    "gulp-concat": "^2.6.1",
    "gulp-eslint": "^6.0.0",
    "gulp-imagemin": "^7.1.0",
    "gulp-load-plugins": "^2.0.1",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-replace": "^1.0.0",
    "gulp-rev": "^9.0.0",
    "gulp-rev-replace": "^0.4.4",
    "gulp-sass": "^4.0.2",
    "gulp-streamify": "1.0.2",
    "gulp-uglify-es": "^1.0.4",
    "gulp-util": "~3.0.8",
    "handlebars-helpers": "^0.10.0",
    "helper-markdown": "^1.0.0",
    "husky": "^3.0.8",
    "install": "^0.13.0",
    "js-yaml": "^3.13.1",
    "lint-staged": "^9.4.1",
    "node-fetch": "^2.6.0",
    "node-notifier": "^6.0.0",
    "prettier": "^1.18.2",
    "pretty-hrtime": "^1.0.3",
    "regenerator-runtime": "^0.13.3",
    "rimraf": "^3.0.0",
    "sass-mq": "^5.0.1",
    "through2": "^3.0.1",
    "vinyl-fs": "^3.0.3",
    "vinyl-source-stream": "^2.0.0",
    "watchify": "^3.11.1",
    "whatwg-fetch": "^3.0.0"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            [
              "@babel/preset-env",
              {
                "useBuiltIns": "entry",
                "corejs": {
                  "version": "3"
                },
                "targets": {
                  "node": "current"
                }
              }
            ]
          ]
        }
      ]
    ]
  },
  "engines": {
    "node": ">=10.13.0"
  }
}
