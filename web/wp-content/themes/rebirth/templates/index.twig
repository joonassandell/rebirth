{% extends "App.twig" %}

{% set template_class = "Template--index" %}

{% block content %}
  {% include "Articles.twig" with {
    articles: posts,
    articles_main: {
      main_heading: {
        text: heading ? : post.title,
      },
    },
    class: 'Template-articles'
  } only %}
  {% for component in post.meta("component") %}
    {% include "components.twig" with { component } %}
  {% endfor %}
  {% for component in options.posts_category_components.components %}
    {% include "components.twig" with { component } %}
  {% endfor %}
{% endblock %}
